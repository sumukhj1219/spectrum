generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String   @id @default(uuid())  // Automatically generate a UUID
  email        String   @unique
  name         String
  rooms        Room[]   @relation("UserRooms") 
  creatorAccessToken String?        // Many-to-many relation for rooms user participates in
  createdRooms Room[]   @relation("RoomCreator")      
  createdAt    DateTime @default(now())                // Track creation time
  updatedAt    DateTime @updatedAt                     // Track update time
}

model Room {
  id          String   @id @default(uuid())            // Automatically generate a UUID
  name        String
  users       User[]   @relation("UserRooms")          // Many-to-many relation for users in the room
  createdBy   User     @relation("RoomCreator", fields: [createdById], references: [id]) // Track the creator of the room
  createdById String
  createdAt   DateTime @default(now())                 // Track creation time
  updatedAt   DateTime @updatedAt                      // Track update time
}
